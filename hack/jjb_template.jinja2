---
- job:
    name: {{ JOB_NAME }}
    project-type: pipeline
    triggers:
      - timed: {% if 'daily-powervs-toronto-p9-stability-check' in JOB_NAME %}"0 */5 * * * "

        {% elif 'daily-ocp4.8-powervs-london-p9-min' in JOB_NAME %}"0 04 * * * "

        {% elif 'daily-ocp4.6-powervs-script-toronto01-p9-min' in JOB_NAME %}"0 00 * * * "
        {% elif 'daily-ocp4.7-powervs-script-toronto01-p9-min' in JOB_NAME %}"0 05 * * * "
        {% elif 'daily-ocp4.8-powervs-script-toronto-p9-min' in JOB_NAME %}"0 09 * * *"
        {% elif 'daily-ocp4.9-powervs-toronto01-p9-scale' in JOB_NAME %}"0 17 * * *"
        {% elif 'daily-ocp4.9-powervs-toronto-p9-min' in JOB_NAME %}"0 13 * * *"

        {% elif 'daily-ocp4.6-powervm-p8-min' in JOB_NAME %}"00 12 * * * "
        {% elif 'daily-ocp4.6-to-4.7-powervm-p8-min-upgrade' in JOB_NAME %}"00 13 * * 2,3"
        {% elif 'daily-ocp4.7-to-4.8-powervm-p8-min-upgrade' in JOB_NAME %}"00 13 * * 1,4,5,6"
        {% elif 'daily-ocp4.9-powervm-p8-vscsi-min' in JOB_NAME %}"00 13 * * 7"
        {% elif 'daily-ocp4.9-powervm-p8-min' in JOB_NAME %}"00 14,00 * * * "
        {% elif 'daily-ocp4.10-powervm-p8-min' in JOB_NAME %}"00 15 * * *  "
        {% elif 'daily-ocp4.10-powervm-p8-nova-min' in JOB_NAME %}"00 16 * * *  "

        {% elif 'daily-ocp4.7-powervm-p9-min' in JOB_NAME %}"00 17 * * *  "
        {% elif 'daily-ocp4.8-powervm-p9-max' in JOB_NAME %}"00 18 * * * "
        {% elif 'daily-ocp4.9-powervm-p9-extproxy-min' in JOB_NAME %}"00 19 * * 3,6 "
        {% elif 'daily-ocp4.9-powervm-p9-sriov-min' in JOB_NAME %}"00 19 * * 1,4 "
        {% elif 'daily-ocp4.9-powervm-p9-chaos-min' in JOB_NAME %}"00 19 * * 7 "
        {% elif 'daily-ocp4.9-powervm-p9-ssp-min' in JOB_NAME %}"00 19 * * 2,5 "
        {% elif 'daily-ocp4.9-powervm-p9-max' in JOB_NAME %}"00 21 * * * "
        {% elif 'daily-ocp4.10-powervm-p9-max' in JOB_NAME %}"00 23 * * * "
        {% elif 'daily-ocp4.10-powervm-p9-sriov-min' in JOB_NAME %}"00 01 * * 1,4 "
        {% elif 'daily-ocp4.10-powervm-p9-ssp-min' in JOB_NAME %}"00 01 * * 2,5 "
        {% elif 'daily-ocp4.10-powervm-p9-extproxy-min' in JOB_NAME %}"00 01 * * 3,6 "


        {% elif 'mirror-openshift-release' in JOB_NAME %}"@hourly"
        {% elif 'poll-powervs-images' in JOB_NAME %}"@daily"
        {% elif 'daily-jenkins-backup-job' in JOB_NAME %}"@daily"
        {% else %}""
        {% endif %}
    sandbox: true
    concurrent: true
    properties:
      - copyartifact:
          projects: "*"
      {% if 'mirror-openshift-release' in JOB_NAME %}
      - build-discarder:
          num-to-keep: 200
          artifact-num-to-keep: 200
      {% else %}
      - build-discarder:
          num-to-keep: 30
          artifact-num-to-keep: 30
      {% endif %}
    pipeline-scm:
      scm:
        - git:
            url: https://github.com/ppc64le-cloud/jenkins-infra.git
            branches:
              - master
            credentials-id: github
            clean: true
      script-path: {{ JENKINS_FILE }}
